{
  "name": "toptunez",
  "version": "1.0.0",
  "description": "A demo music recommendation API for Delicious Insightsâ€™ Node.js training, 2018 Edition",
  "scripts": {
    "lint": "eslint src",
    "start": "node src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm test -- --watch"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "keywords": [
    "node",
    "demo",
    "music",
    "mongoose",
    "rest",
    "api"
  ],
  "author": "Christophe Porteneuve <christophe@delicious-insights.com> (https://delicious-insights.com/)",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:import/errors"
    ],
    "plugins": [
      "prettier",
      "import"
    ],
    "rules": {
      "no-irregular-whitespace": 0
    },
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "notify": true,
    "rootDir": "src",
    "testEnvironment": "node",
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ]
    ]
  },
  "prettier": {
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@saeris/graphql-scalars": "^2.1.1",
    "apollo-server": "^2.14.2",
    "bunyan": "^1.8.12",
    "chalk": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "email-regex": "^4.0.0",
    "graphql": "^15.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "mongoose": "^5.9.18",
    "mongoose-pii": "^2.0.0",
    "node-restify-validation": "^1.3.0",
    "otplib": "^11.0.1",
    "qrcode": "^1.4.4",
    "restify": "^8.5.1",
    "restify-cors-middleware": "^1.1.1",
    "restify-errors": "^8.0.2",
    "restify-jwt-community": "^1.1.4",
    "serverless-http": "^2.5.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "apollo": "^2.28.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "import-sort-style-delicious": "^1.0.2",
    "jest": "^26.0.1",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "now": "^20.1.2",
    "prettier": "^2.0.5",
    "serverless": "^2.6.0",
    "supertest": "^5.0.0"
  }
}
