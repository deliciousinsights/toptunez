{
  "name": "toptunez",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "A demo music recommendation API for Delicious Insightsâ€™ Node.js training, 2018 Edition",
  "scripts": {
    "dev": "nodemon src/server.js",
    "lint": "eslint src",
    "start": "node --no-warnings src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=6"
  },
  "keywords": [
    "node",
    "demo",
    "music",
    "mongoose",
    "rest",
    "api"
  ],
  "author": "Christophe Porteneuve <christophe@delicious-insights.com> (https://delicious-insights.com/)",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:import/errors"
    ],
    "plugins": [
      "prettier",
      "import"
    ],
    "rules": {
      "no-irregular-whitespace": 0
    },
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "<rootDir>/../coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "notify": true,
    "rootDir": "src",
    "testEnvironment": "<rootDir>/../jest/mongo-memory-environment.cjs",
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ]
    ]
  },
  "prettier": {
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "deliciousImportSort": {
    "mainOrder": [
      "absolute",
      "relative",
      "bare"
    ]
  },
  "importSort": {
    ".js": {
      "style": "delicious"
    }
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.6",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "chalk-template": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "email-regex": "^5.0.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalars": "^1.22.2",
    "graphql-validation-complexity": "^0.4.2",
    "jsonwebtoken": "^9.0.2",
    "lodash.merge": "^4.6.2",
    "mongoose": "^7.5.3",
    "mongoose-pii": "^2.0.0",
    "node-restify-validation": "^1.3.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "restify": "^11.1.0",
    "restify-cors-middleware2": "^2.2.1",
    "restify-errors": "^8.0.2",
    "restify-jwt-community": "^2.0.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "graphql-tag": "^2.12.6",
    "import-sort-style-delicious": "^1.0.2",
    "jest": "^29.7.0",
    "jest-watch-toggle-config": "^3.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "mongodb-memory-server": "^8.15.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
