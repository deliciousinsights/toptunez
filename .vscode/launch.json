{
  // Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
  // Pointez pour afficher la description des attributs existants.
  // Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Lance notre serveur REST sur son port par défaut (3000),
    // en mode débogage avec rechargement automatique grâce à Nodemon.
    {
      "type": "node",
      "request": "launch",
      "name": "Lancer le serveur REST",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "program": "${workspaceFolder}/src/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    // Permet le débogage de nos tests
    {
      "type": "node",
      "request": "launch",
      "name": "Déboguer les tests",
      "runtimeArgs": ["--experimental-json-modules", "--no-warnings"],
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "args": ["--inspect"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Déboguer le fichier de tests courant",
      "runtimeArgs": ["--experimental-json-modules", "--no-warnings"],
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "args": ["--inspect", "${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "disableOptimisticBPs": true
    }
  ]
}
